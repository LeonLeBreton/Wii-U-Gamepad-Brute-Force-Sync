<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="rodrigodavy.com.github.wiiugamepadbruteforcesync.MainActivity">

    <TextView
        android:id="@+id/position_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="1/256"
        android:textSize="36sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/suits_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/timer"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:text="♠	♥ ♦ ♣"
        tools:text="a b c d"
        android:textSize="60sp"/>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"

        android:text="3:00"
        android:textSize="32sp"/>

    <Button
        android:id="@+id/reset_timer_button"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer"

        android:layout_alignStart="@+id/timer"

        android:layout_alignLeft="@+id/timer"

        android:layout_alignEnd="@+id/timer"
        android:layout_alignRight="@+id/timer"
        android:layout_marginStart="-31dp"
        android:layout_marginLeft="-31dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-30dp"
        android:layout_marginRight="-30dp"
        android:background="@drawable/rounded_button_small"
        android:onClick="resetTimer"
        android:text="@string/start" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"

        android:background="@drawable/rounded_button"
        android:text="@string/next"
        android:textSize="32sp"

        android:onClick="next"/>

</RelativeLayout>
